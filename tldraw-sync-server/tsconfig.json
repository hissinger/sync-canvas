{
	"include": ["src", "scripts", "vite.config.mts"],
	"exclude": ["node_modules", "dist", ".tsbuild*"],
	"compilerOptions": {
		"module": "ESNext",
		"emitDeclarationOnly": false,
		"outDir": "dist",
		"target": "ES2020",
		"downlevelIteration": true,
		"moduleResolution": "node",
		"esModuleInterop": true,
		"types": ["node"],
		"strict": true,
    	"skipLibCheck": true
	},
	"references": []
}
